{
  "expo": {
    "name": "DizzySense",
    "slug": "dizzy-sense",
    "version": "1.0.0", // Human-readable app version
    "orientation": "portrait",
    "icon": "./assets/images/icon.png", // 512Ã—512 final Play Store icon
    "scheme": "dizzysense",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "package": "com.entclinicdwarka.dizzysense", // Unique permanent ID
      "versionCode": 1, // Increment for each update
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/playstore-icon.png",
        "backgroundColor": "#551802"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [] // Minimal permissions (empty = no extras)
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#551802"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
